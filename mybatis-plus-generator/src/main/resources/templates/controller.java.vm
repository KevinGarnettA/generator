package ${package.Controller};

import org.springframework.web.bind.annotation.RequestMapping;
import cn.testin.base.common.core.utils.R;
#if(${restControllerStyle})
import org.springframework.web.bind.annotation.RestController;
#else
import org.springframework.stereotype.Controller;
#end


/**
 * <p>
 * $!{table.comment} 前端控制器
 * </p>
 *
 * @author ${author}
 * @since ${date}
 */
#if(${restControllerStyle})
@RestController
#else
@RestController
#end
@Slf4j
@RequestMapping("#if(${package.ModuleName})/${package.ModuleName}#end/#if(${controllerMappingHyphenStyle})${controllerMappingHyphen}#else${table.entityPath}#end")
#if(${kotlin})
class ${table.controllerName}#if(${superControllerClass}) : ${superControllerClass}()#end

#else
#if(${superControllerClass})
public class ${table.controllerName} extends ${superControllerClass} {
#else
public class ${table.controllerName} {
#end

    @Autowired
    private I${entity}Service ${entityLowerCase}Service;

    @ApiOperation(value = "记录查询")
    @GetMapping("/{id}")
    public R get${entity}(@PathVariable("id") Long id) {
        return R.ok((${entityLowerCase}Service.get${entity}(id)));
    }

    @ApiOperation(value = "保存")
    @PostMapping("/save")
    public R save${entity}(@Validated @RequestBody ${entity}SaveReq request) {
        ${entityLowerCase}Service.save${entity}(request);
        return R.ok();
    }


    @ApiOperation(value = "删除")
    @PostMapping("/delete")
    public R delete${entity}(@Validated @RequestBody ${entity}DeleteReq request) {
        ${entityLowerCase}Service.delete${entity}(request);
        return R.ok();
    }


    @ApiOperation(value = "列表查询")
    @PostMapping("/list")
    public R get${entity}List(@Validated @RequestBody ${entity}ListReq request) {
        return R.ok(${entityLowerCase}Service.get${entity}List(request));
    }


    @ApiOperation(value = "分页查询")
    @PostMapping("page")
    public R get${entity}PageList(@Validated @RequestBody ${entity}PageReq request) {
        return R.ok(${entityLowerCase}Service.get${entity}PageList(request));
    }

}
#end
